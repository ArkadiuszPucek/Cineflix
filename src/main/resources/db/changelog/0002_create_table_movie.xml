<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">
    <changeSet id="0001-2" author="puccini">
        <createTable tableName="movie">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(100)"/>
            <column name="releaseYear" type="INT"/>
            <column name="imageUrl" type="VARCHAR(255)"/>
            <column name="imdbRating" type="VARCHAR(10)"/>
            <column name="promoted" type="BOOLEAN"/>
            <column name="genre_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_movie_genre"
                             referencedTableName="genre"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
